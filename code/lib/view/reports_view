import 'package:flutter/material.dart';

class ReportsView extends StatelessWidget {
  final int totalOrders;
  final Map<String, int> drinkStats;
  
  ReportsView({required this.totalOrders, required this.drinkStats});
  
  @override
  Widget build(BuildContext context) {
    return Padding(
      padding: EdgeInsets.all(20),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text('Toltal orders: $totalOrders', style: TextStyle(fontSize: 20)),
          SizedBox(height: 20),
          Text('Top seeling drinks:', style: TextStyle(fontSize: 18)),
          SizedBox(height: 10),
          Expanded(
            child: drinkStats.isEmpty
                ? Center(child: Text('None'))
                : ListView(
                    children: drinkStats.entries
                        .map((e) => Card(child: ListTile(title: Text(e.key), trailing: Text('${e.value}'))))
                        .toList(),
                  ),
          ),
        ],
      ),
    );
  }
}